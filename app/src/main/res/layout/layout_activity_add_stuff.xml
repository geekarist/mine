<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:theme="@style/AppTheme">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/add_stuff_item_description"
        android:text="@string/add_stuff_description"/>

    <EditText
        android:id="@id/add_stuff_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/add_stuff_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_stuff_save_description"/>
</LinearLayout>